<configuration>

    <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>%yellow(%d{HH:mm:ss.SSS}) %highlight(%-5level) %green([%thread]) %cyan(%logger{50}) - %msg%n</pattern>
        </encoder>
    </appender>

    <logger name="com.gestorsistemas" level="debug"/>

    <root level="INFO">
        <appender-ref ref="STDOUT"/>
    </root>

</configuration>